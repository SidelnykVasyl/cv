extends layout

block content
  div.page
     div.header 
        div.header__basic_info
           h2 #{data.first_name}
           h2 #{data.last_name}
        div.header__vocation
           h3 #{data.position}
        div.header__img
           img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRkBErbWb67c056gQAwi-NyXzUKiMPCSzJhRyGzztyu_FZI0aAzZg&s", alt="personImg")
     div.header__contacts_info
        div.leftSide
            div.firstSection
              p ADDRESS
              p EMAIL
              p LINKS
            div.firstSection.value
              p #{data.address}
              p #{data.email}
              p 
               a.blueColor(href=data.links[0].link) #{data.links[0].label} , 
               a.blueColor(href=data.links[1].link) #{data.links[1].label}
        div.rightSide
            div.firstSection
              p PHONE
              p DATE OF BIRTH
            div.firstSection.value
              p #{data.phone}
              p #{data.dob}
     .employment
         .employment__title
            h2 #{data.sections[0].toUpperCase()}
         .employment__description
            .employment__date
               .employment__date_item
                  p #{data.works[0].start_date} - #{data.works[0].end_date}
                  span.blueColor #{data.works[0].city.toUpperCase()}
            .employment__position
               .employment__position_item
                  p #{data.works[0].title}
                  span.greyColor #{data.works[0].employer}
                  p !{data.works[0].description}         
         .employment__description
            .employment__date
               .employment__date_item
                  p #{data.works[1].start_date} - #{data.works[1].end_date}
                  span.blueColor #{data.works[1].city.toUpperCase()}
            .employment__position
               .employment__position_item
                  p #{data.works[1].title}
                  span.greyColor #{data.works[1].employer}
                  p !{data.works[1].description}         
         .employment__description
            .employment__date
               .employment__date_item
                  p #{data.works[2].start_date} - #{data.works[2].end_date}
                  span.blueColor #{data.works[2].city.toUpperCase()}
            .employment__position
               .employment__position_item
                  p #{data.works[2].title}
                  span.greyColor #{data.works[2].employer}
                  p !{data.works[2].description}         
         .employment__description
            .employment__date
               .employment__date_item
                  p #{data.works[3].start_date} - #{data.works[3].end_date}
                  span.blueColor #{data.works[3].city.toUpperCase()}
            .employment__position
               .employment__position_item
                  p #{data.works[3].title}
                  span.greyColor #{data.works[3].employer}
                  p !{data.works[3].description}         
     .projects
         .projects__title
            h2 #{data.sections[1].toUpperCase()}
         .projects__description
            .projects__date
               p #{data.projects[0].start_date + ' - ' + data.projects[0].end_date}
               span.blueColor #{data.projects[0].organization}
            .projects__position
               h3 #{data.projects[0].title} 
               p !{data.projects[0].description} 
         .projects__description
            .projects__date
               p #{data.projects[1].start_date + ' - ' + data.projects[1].end_date}
               span.blueColor #{data.projects[1].organization}
            .projects__position
               h3 #{data.projects[1].title} 
               p !{data.projects[1].description} 
     .languages
      .languages__title
         h2 #{data.sections[2].toUpperCase()}
      .languages__items
         .languages__items_left
            p #{data.languages[0].label}
         .languages__items_right
            p #{data.languages[1].label}
     .education
         .education__title 
            h2 #{data.sections[3].toUpperCase()}
         .education__description
            .education__date
               p #{data.educations[0].start_date} - #{data.educations[0].end_date}
               span.blueColor #{data.educations[0].city}
            .education__position
               h3 #{data.educations[0].school}
               p.greyColor #{data.educations[0].degree}
               p !{data.educations[0].description}
     .skills 
         .skills__title
            h2 #{data.sections[4].toUpperCase()} 
         .skills__description
                  .skills__left_side
                     p #{data.skills[0].label}
                     p #{data.skills[1].label}
                     p #{data.skills[2].label}
                     p #{data.skills[3].label}
                     p #{data.skills[0].label}
                     p #{data.skills[1].label}
                  .skills__right_side    
                     p #{data.skills[2].label}
                     p #{data.skills[3].label}
                     p #{data.skills[0].label}
                     p #{data.skills[1].label}
                     p #{data.skills[2].label}
                     p #{data.skills[3].label}
               
     .honors
        .honors__title
          h2 #{data.sections[5].toUpperCase()}
        .honors__description
           .honors__description_item
              h3 #{data.honors[0].title}
              p.greyColor #{data.honors[0].issuer}
              p !{data.honors[0].description}
     .references
         .references__title
               h2 #{data.sections[6].toUpperCase()}
         .references__description
               h3 #{data.references[0].name}
               p.greyColor #{data.references[0].company}
               p #{data.references[0].email}
     .courses
         .courses__title
               h2 #{data.sections[7].toUpperCase()}
         .courses__description
               p #{data.courses[0].course}
               p.greyColor #{data.courses[0].association}
         .courses__description
               p #{data.courses[1].course}
               p.greyColor #{data.courses[1].association}
         .courses__description
               p #{data.courses[2].course}
               p.greyColor #{data.courses[2].association}
     .hobbies
         .hobbies__title
               h2 HOBBIES
         .hobbies__description
            p #{data.hobbies}
